---
import type {ContentItem} from "@agility/content-fetch"
import type {AgilityPageProps} from "../../lib/agility-cms/types/agility-page-props"
import type {AgilityComponentProps} from "../../lib/agility-cms/types/agility-component-props"

interface IHeading {
	title: string
}
interface Props extends AgilityComponentProps {}

const {item} = Astro.props

const {
	contentID,
	fields: {title},
} = item as ContentItem<IHeading>
---

<div class="relative px-8">
	<div class="max-w-screen-xl mx-auto my-12 md:mt-18 lg:mt-20">
		<h1 class="font-display text-secondary-500 text-4xl font-black tracking-wide">{title}</h1>
	</div>
</div>
